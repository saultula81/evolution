{
  "name": "multi-agent-orchestrator",
  "version": "1.0.0",
  "description": "Multi-Agent Prompt Orchestrator for ChatGPT, Gemini and Z-Chat",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev --prefix frontend\" \"wait-on http://localhost:5174 && electron .\"",
    "build:frontend": "cd frontend && npm run build && cd .. && xcopy /e /y frontend\\dist .",
    "build:exe": "npm run build:frontend && npx electron-builder --win --portable",
    "test": "jest"
  },
  "build": {
    "appId": "com.saul.orchestrator",
    "productName": "MultiAgentOrchestrator",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "index.html",
      "**/*.js",
      "**/*.css",
      "!frontend/**/*",
      "!tools/**/*",
      "!tests/**/*"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "jest": "^29.7.0",
    "wait-on": "^7.2.0"
  }
}